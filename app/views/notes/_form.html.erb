<div class="container" style="width: 40rem;">

  <%= form_with(model: note) do |form| %>
    <% if note.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

        <ul>
          <% note.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>


    <form>
      <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label", style="font-size: 20px">Title</label>
        <div class="col-sm-10">
          <%= form.text_field :title, class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label", style="font-size: 20px">Content</label>
        <div class="col-sm-10">
          <%= form.text_area :content, class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label", style="font-size: 20px">Image</label>
        <div class="col-sm-10">
          <%= form.file_field :image, class: "form-control" %>
        </div>
      </div>


      <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label", style="font-size: 20px">Status</label>
        <div class="col-sm-10">
          <%= form.select :status, ["On-Progress", "Completed"], class: "form-select" %>
        </div>
      </div>

      <%= form.submit :submit, class: "btn btn-primary btn-sm" %>
      <%= link_to("Home", notes_path, class: "btn btn-secondary btn-sm") %>
    </form>
  </div>

<% end %>


